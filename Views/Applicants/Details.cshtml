@model SAIS.Models.Applicant

@{
    ViewData["Title"] = "Applicant Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-xl-10">
            <!-- Page Header -->
            <div class="page-header mb-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h1 class="h3 mb-0 text-gray-800">
                            <i class="fas fa-user-circle me-2 text-primary"></i>
                            Applicant Details
                        </h1>
                        <p class="text-muted mb-0">View detailed information about this applicant</p>
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to Applications
                        </a>
                    </div>
                </div>
            </div>

            <!-- Personal Information Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Name Section -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">First Name</label>
                                <p class="mb-0">@(Model.FirstName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Middle Name</label>
                                <p class="mb-0">@(Model.MiddleName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Last Name</label>
                                <p class="mb-0">@(Model.LastName ?? "N/A")</p>
                            </div>
                        </div>

                        <!-- Demographic Info -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Gender</label>
                                <p class="mb-0">@(Model.Sex?.SexName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Age</label>
                                <p class="mb-0">@Model.Age</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Marital Status</label>
                                <p class="mb-0">@(Model.MaritalStatus?.StatusName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">ID Number</label>
                                <p class="mb-0">@(Model.IDNumber ?? "N/A")</p>
                            </div>
                        </div>

                        <!-- Contact Info -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Postal Address</label>
                                <p class="mb-0">@(Model.PostalAddress ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Physical Address</label>
                                <p class="mb-0">@(Model.PhysicalAddress ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Phone Number</label>
                                <p class="mb-0">@(Model.Telephone ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Email Address</label>
                                <p class="mb-0">@(Model.Email ?? "N/A")</p>
                            </div>
                        </div>

                        <!-- Application Info -->
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Application Date</label>
                                <p class="mb-0">@Model.ApplicationDate.ToString("dd MMM yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted">Application Status</label>
                                <p class="mb-0">@(Model.Status?.StatusName ?? "N/A")</p>
                            </div>
                        </div>

                        <!-- Location Info -->
                        <div class="col-12">
                            <div class="mb-0">
                                <label class="form-label fw-semibold text-muted">Location</label>
                                <p class="mb-0">
                                    @{
                                        var locationParts = new List<string>();
                                        if (!string.IsNullOrEmpty(Model.Village?.VillageName))
                                        {
                                            locationParts.Add(Model.Village.VillageName);
                                        }
                                        if (!string.IsNullOrEmpty(Model.Village?.SubLocation?.SubLocationName))
                                        {
                                            locationParts.Add(Model.Village.SubLocation.SubLocationName);
                                        }
                                        if (!string.IsNullOrEmpty(Model.Village?.SubLocation?.Location?.LocationName))
                                        {
                                            locationParts.Add(Model.Village.SubLocation.Location.LocationName);
                                        }
                                        if (!string.IsNullOrEmpty(Model.Village?.SubLocation?.Location?.SubCounty?.SubCountyName))
                                        {
                                            locationParts.Add(Model.Village.SubLocation.Location.SubCounty.SubCountyName);
                                        }
                                        if (!string.IsNullOrEmpty(Model.Village?.SubLocation?.Location?.SubCounty?.County?.CountyName))
                                        {
                                            locationParts.Add(Model.Village.SubLocation.Location.SubCounty.County.CountyName);
                                        }
                                        @string.Join(", ", locationParts)
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Programme Selection Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-list-check me-2"></i>
                        Social Assistance Programmes
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ApplicantPrograms != null && Model.ApplicantPrograms.Any())
                    {
                        <div class="row g-3">
                            @foreach (var program in Model.ApplicantPrograms)
                            {
                                <div class="col-lg-4 col-md-6">
                                    <div class="border rounded p-3 mb-3 bg-light">
                                        <h6 class="fw-semibold text-success mb-1">@(program.Program?.ProgramName ?? "N/A")</h6>
                                        <small class="text-muted">Status: @program.StatusID</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            No programmes applied for.
                        </div>
                    }
                </div>
            </div>

            <!-- Form Actions -->
            <div class="card shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model.ApplicantID" class="btn btn-warning px-4">
                                <i class="fas fa-edit me-1"></i>
                                Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-arrow-left me-1"></i>
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>