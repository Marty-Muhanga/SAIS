@{
    var prevDisabled = (int)ViewData["CurrentPage"] == 1 ? "disabled" : "";
    var nextDisabled = (int)ViewData["CurrentPage"] >= (int)ViewData["TotalPages"] ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @prevDisabled">
            <a class="page-link"
               asp-action="@ViewData["Action"]"
               asp-route-page="@((int)ViewData["CurrentPage"] - 1)"
               asp-route-searchTerm="@ViewData["CurrentFilter"]"
               asp-route-statusId="@ViewData["StatusId"]"
               asp-route-fromDate="@ViewData["FromDate"]"
               asp-route-toDate="@ViewData["ToDate"]"
               asp-route-countyId="@ViewData["CountyId"]"
               asp-route-subCountyId="@ViewData["SubCountyId"]"
               asp-route-locationId="@ViewData["LocationId"]"
               asp-route-subLocationId="@ViewData["SubLocationId"]"
               asp-route-villageId="@ViewData["VillageId"]">Previous</a>
        </li>
        @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
        {
        <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
            <a class="page-link"
               asp-action="@ViewData["Action"]"
               asp-route-page="@i"
               asp-route-searchTerm="@ViewData["CurrentFilter"]"
               asp-route-statusId="@ViewData["StatusId"]"
               asp-route-fromDate="@ViewData["FromDate"]"
               asp-route-toDate="@ViewData["ToDate"]"
               asp-route-countyId="@ViewData["CountyId"]"
               asp-route-subCountyId="@ViewData["SubCountyId"]"
               asp-route-locationId="@ViewData["LocationId"]"
               asp-route-subLocationId="@ViewData["SubLocationId"]"
               asp-route-villageId="@ViewData["VillageId"]">@i</a>
        </li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link"
               asp-action="@ViewData["Action"]"
               asp-route-page="@((int)ViewData["CurrentPage"] + 1)"
               asp-route-searchTerm="@ViewData["CurrentFilter"]"
               asp-route-statusId="@ViewData["StatusId"]"
               asp-route-fromDate="@ViewData["FromDate"]"
               asp-route-toDate="@ViewData["ToDate"]"
               asp-route-countyId="@ViewData["CountyId"]"
               asp-route-subCountyId="@ViewData["SubCountyId"]"
               asp-route-locationId="@ViewData["LocationId"]"
               asp-route-subLocationId="@ViewData["SubLocationId"]"
               asp-route-villageId="@ViewData["VillageId"]">Next</a>
        </li>
    </ul>
</nav>